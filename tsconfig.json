{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/components": ["src/components"],
      "~/dom": ["src/dom"],
      "~/features": ["src/features"],
      "~/types": ["src/types"],
      "~/utils": ["src/utils"]
    },
    "types": ["chrome"],
    "target": "ES2020",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  },
  "include": ["src"]
}
