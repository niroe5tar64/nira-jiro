{
  "manifest_version": 3,
  "name": "韮次郎 - Jira拡張機能",
  "version": "1.0",
  "description": "Jiraにテンプレートや記法変換を追加する拡張機能「韮次郎」",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://{{JIRA_DOMAIN}}/*"],
      "js": ["content.js"]
    }
  ]
}
